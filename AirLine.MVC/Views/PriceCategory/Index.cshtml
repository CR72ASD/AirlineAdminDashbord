@model IReadOnlyList<PriceCategoryViewModel>
@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Create" class="btn btn-outline-primary m-2">Add New Price Category</a>
@if (Model.Count() > 0)
{
	<div class="container">
		<table class="table table-hover table-striped table-bordered dt-responsive nowrap">
			<thead class="bg-dark text-white text-center">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Price</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Items in Model)
				{
					<tr>
						<td>@Items.CategoryNumber</td>
						<td>@Items.CategoryName</td>
						<td>@Items.CategoryPrice</td>
						<td>
							<div class=" d-flex">
								<a class="btn mb-2 text-warning" asp-action="Edit" asp-route-id="@Items.CategoryNumber"><i class="fas fa-pen"></i> </a>
								<a class="btn text-danger" asp-action="Delete" asp-route-id="@Items.CategoryNumber"><i class="fas fa-trash"></i></a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

}
else
{
	<div class="mt-3 p-3 alert-warning">
		<h2>There is no Price Category!</h2>
	</div>
}
@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}